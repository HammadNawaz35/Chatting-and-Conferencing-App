<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cardBgColor"
    android:layout_height="match_parent"
    tools:context=".activities.main.MeetingHistoryActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:titleTextColor="@color/colorwhites"
        android:background="@color/colorPrimary"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="start"
        app:cardCornerRadius="20dp"
        android:background="@color/cardBgColor"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_marginBottom="20dp"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:background="@color/cardBgColor"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/meet2"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGreen"
                />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@color/colorGreen"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView

                android:layout_margin="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Title:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:layout_gravity="center"
                />
        <TextView
     android:id="@+id/meetingname"
            android:layout_margin="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="AI class"
    android:textStyle="bold"
    android:textSize="15sp"
    android:textColor="@color/colorAccent"
    android:gravity="center"
    android:layout_gravity="center"
    /></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGreen"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_margin="9dp"
                    android:layout_height="wrap_content"

                    android:text="Meeting Id:"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

        <TextView
            android:id="@+id/meetingid"
            android:layout_width="match_parent"
            android:layout_margin="9dp"
            android:layout_height="wrap_content"


            android:text="112334343"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_gravity="center"
            />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Time:"
                android:layout_margin="9dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:layout_gravity="center"
                />
        <TextView
            android:id="@+id/meetingtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="112334343"
            android:layout_margin="9dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_gravity="center"
            />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorGreen"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/startmeeting"
                    android:background="@drawable/bg_round_buttons"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:textColor="#F1EDED"

                    android:layout_height="47dp"

                    android:layout_margin="12dp"
                    android:text="Start" />

        </LinearLayout>     </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>